{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run avm-sync-linux binary",
            "type": "shell",
            "command": "${workspaceFolder}/bin/avm-sync-linux",
            "args": [
                "--ado-organization=<org>",
                "--ado-project=<project>",
                "--ado-repo-id=<repo-id>",
                "--module-sync-author-name=<author-name>",
                "--module-sync-author-email=<author-email>",
                "--module-sync-source-repo-child-path=<source-repo-child-path>",
                "--use-local-identity",
                "--read-local-csv",
                "--ado-pat=<pat>"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
